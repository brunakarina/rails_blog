<p style="color: green" class="text-center"><%= notice %></p>

<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto lg:mx-0 flex justify-between w-full">

      <div>
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Last posts</h2>
        <p class="mt-2 text-lg leading-8 text-gray-600">Check out what's new in the tech community.</p>
      </div>

      <% if user_signed_in? %>
      <div class="flex flex-col justify-end">
        <%= link_to "New post", new_post_path, class: "block rounded-md bg-teal-600 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-teal-700" %>
      </div>
      <% end %>
    </div>
    <div
      class="mx-auto mt-10  max-w-2xl flex flex-col gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">

      <% @posts.each do |post| %>
      <%= render post %>
      <% end %>
    </div>
  </div>
</div>