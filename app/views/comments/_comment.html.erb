<div id="<%= dom_id comment %>">

  <div class="text-stone-900 flex gap-10 my-[10px]">
    <%= comment.content %>

    <span class="italic text-slate-600 ml-[15px]"><%= comment.user.email  %></span>

    <% if user_signed_in? && current_user.id == comment.user_id %>
    <%= button_to "Destroy", post_comment_path(comment.post_id, comment.id), method: :delete, class: "block rounded-md text-red-500 px-2  py-2.5 text-[12px] font-medium  transition hover:bg-red-500 hover:text-white" %>
    <% end %>
  </div>
</div>